# Production Environment Variables for TableOrder Backend
# Copy this file to .env and update the values for your production environment

# Database Configuration
POSTGRES_DB=tableorder
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# JWT Configuration
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_at_least_32_characters_long!
JWT_ISSUER=TableOrder.Backend
JWT_AUDIENCE=TableOrder.Clients
JWT_EXPIRATION_MINUTES=60

# Authentication Credentials
ADMIN_KEY=your_secure_admin_key_here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here
STAFF_USERNAME=staff
STAFF_PASSWORD=your_secure_staff_password_here

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000;https://+:5001

# Optional: External Services
# REDIS_CONNECTION_STRING=redis:6379
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@yourdomain.com
# SMTP_PASSWORD=your_email_password

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=Information
